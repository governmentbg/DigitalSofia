<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/margin_20"
    android:layout_marginTop="@dimen/margin_5"
    android:layout_marginEnd="@dimen/margin_20"
    android:layout_marginBottom="@dimen/margin_5"
    android:background="@drawable/bg_shadow"
    android:fitsSystemWindows="true">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivDigitalSofia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_20"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img_logo_small" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvNumber"
        style="@style/TextStyle.12spRegularGrayColor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_8"
        android:layout_marginEnd="@dimen/margin_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/lorem_ipsum_size_2" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTitle"
        style="@style/TextStyle.20spRegularMainColor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_16"
        android:layout_marginEnd="@dimen/margin_16"
        app:layout_constraintBottom_toBottomOf="@+id/ivDigitalSofia"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivDigitalSofia"
        app:layout_constraintTop_toTopOf="@+id/ivDigitalSofia"
        tools:text="@string/lorem_ipsum_size_7" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvFileName"
        style="@style/TextStyle.16spRegularMainColor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_32"
        android:layout_marginEnd="@dimen/margin_20"
        android:drawableStart="@drawable/ic_document"
        android:drawablePadding="@dimen/margin_20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivDigitalSofia"
        tools:text="@string/lorem_ipsum_size_7" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvCreatedOnTitle"
        style="@style/TextStyle.14spRegularMainColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_24"
        android:text="@string/document_created_on"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvFileName" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvCreatedOnValue"
        style="@style/TextStyle.14spRegularMainColor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_24"
        android:layout_marginEnd="@dimen/margin_16"
        app:layout_constraintBottom_toBottomOf="@+id/tvCreatedOnTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvCreatedOnTitle"
        app:layout_constraintTop_toTopOf="@+id/tvCreatedOnTitle"
        tools:text="@string/lorem_ipsum_size_3" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvSignedOnTitle"
        style="@style/TextStyle.14spRegularMainColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_10"
        android:text="@string/document_signed_on"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvCreatedOnTitle" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvSignedOnValue"
        style="@style/TextStyle.14spRegularMainColor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_24"
        android:layout_marginEnd="@dimen/margin_16"
        app:layout_constraintBottom_toBottomOf="@+id/tvSignedOnTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvSignedOnTitle"
        app:layout_constraintTop_toTopOf="@+id/tvSignedOnTitle"
        tools:text="@string/lorem_ipsum_size_3" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvShowFile"
        style="@style/TextStyle.14spRegularMainColor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_24"
        android:drawableStart="@drawable/ic_open_file"
        android:drawablePadding="@dimen/margin_6"
        android:text="@string/document_view_file"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSignedOnTitle" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvDownloadFile"
        style="@style/TextStyle.14spRegularMainColor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_20"
        android:layout_marginBottom="@dimen/margin_24"
        android:drawableStart="@drawable/ic_download_file"
        android:drawablePadding="@dimen/margin_6"
        android:text="@string/document_download_file"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvShowFile" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnStatus"
        style="@style/ButtonStyle.Green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_20"
        android:layout_marginBottom="@dimen/margin_20"
        android:drawableStart="@drawable/ic_ok"
        android:drawablePadding="@dimen/margin_6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="@string/lorem_ipsum_size_2" />

</androidx.constraintlayout.widget.ConstraintLayout>