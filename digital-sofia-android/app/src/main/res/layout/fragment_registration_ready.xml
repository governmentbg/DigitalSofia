<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background"
    android:fitsSystemWindows="true">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:fillViewport="true">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_48"
                android:src="@drawable/img_avatar" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvHello"
                style="@style/TextStyle.24spRegularMainColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="@dimen/margin_32"
                android:layout_marginTop="@dimen/margin_32"
                android:layout_marginEnd="@dimen/margin_32"
                android:text="@string/registration_ready_hello" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_48"
                android:src="@drawable/ic_success_big" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/TextStyle.24spSemiBoldMainColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_32"
                android:layout_marginTop="@dimen/margin_24"
                android:layout_marginEnd="@dimen/margin_32"
                android:gravity="bottom|center_horizontal"
                android:singleLine="false"
                android:text="@string/registration_ready_title" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/TextStyle.20spRegularMainColor"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/margin_48"
                android:layout_marginTop="@dimen/margin_32"
                android:layout_marginEnd="@dimen/margin_48"
                android:layout_marginBottom="@dimen/margin_64"
                android:layout_weight="1"
                android:gravity="center_horizontal|top"
                android:singleLine="false"
                android:text="@string/registration_ready_description" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnMyProfile"
                style="@style/ButtonStyle.Blue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="@dimen/margin_32"
                android:layout_marginTop="@dimen/margin_32"
                android:layout_marginEnd="@dimen/margin_32"
                android:layout_marginBottom="@dimen/margin_96"
                android:text="@string/registration_ready_button"
                android:textSize="18sp" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.core.widget.NestedScrollView>

</FrameLayout>