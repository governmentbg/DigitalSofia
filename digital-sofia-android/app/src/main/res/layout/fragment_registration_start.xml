<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/img_registration_background" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/rootLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_background_30_percents"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="190dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_64"
            android:background="@color/color_transparent"
            app:srcCompat="@drawable/img_logo_big" />

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/TextStyle.24spSemiBoldMainColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_32"
            android:layout_marginTop="@dimen/margin_96"
            android:layout_marginEnd="@dimen/margin_32"
            android:background="@color/color_transparent"
            android:singleLine="false"
            android:text="@string/start_title" />

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/TextStyle.20spRegularMainColor"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/margin_32"
            android:layout_marginTop="@dimen/margin_8"
            android:layout_marginEnd="@dimen/margin_32"
            android:layout_weight="1"
            android:background="@color/color_transparent"
            android:singleLine="false"
            android:text="@string/start_description" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnRegistration"
            style="@style/ButtonStyle.Blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="@dimen/margin_4"
            android:layout_marginTop="@dimen/margin_16"
            android:layout_marginBottom="@dimen/margin_64"
            android:gravity="center"
            android:text="@string/start_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</FrameLayout>